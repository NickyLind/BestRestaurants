@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.CuisineRestaurant>;

<h1>Restaurant</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
}

<ul>
@foreach (var entity in Model)
{
  <li>@Html.ActionLink($"{entity.Restaurant.Name}", "Details", new {id = entity.Restaurant.RestaurantId}) | @entity.Cuisine.Name</li>
}
</ul>
<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>