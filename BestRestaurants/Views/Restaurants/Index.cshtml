@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurant</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
}

<ul>
@foreach (var restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.RestaurantId}) : @foreach(var cuisine in restaurant.JoinEntities){ <text> @cuisine.Cuisine.Name |</text> } </li>
}
</ul>
<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>